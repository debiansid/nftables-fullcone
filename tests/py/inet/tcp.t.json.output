# tcp flags & (syn|fin) == (syn|fin)
[
    {
        "match": {
            "left": {
                "&": [
                    {
                        "payload": {
                            "field": "flags",
                            "protocol": "tcp"
                        }
                    },
                    {
                        "|": [
                            "fin",
                            "syn"
                        ]
                    }
                ]
            },
            "op": "==",
            "right": {
                "|": [
                    "fin",
                    "syn"
                ]
            }
        }
    }
]

