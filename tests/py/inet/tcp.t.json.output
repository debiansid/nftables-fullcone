# tcp flags & (fin | syn | rst | psh | ack | urg) == { fin, ack, psh | ack, fin | psh | ack }
[
    {
        "match": {
            "left": {
                "&": [
                    {
                        "payload": {
                            "field": "flags",
                            "protocol": "tcp"
                        }
                    },
                    {
                        "|": [
                            {
                                "|": [
                                    {
                                        "|": [
                                            {
                                                "|": [
                                                    {
                                                        "|": [
                                                            "fin",
                                                            "syn"
                                                        ]
                                                    },
                                                    "rst"
                                                ]
                                            },
                                            "psh"
                                        ]
                                    },
